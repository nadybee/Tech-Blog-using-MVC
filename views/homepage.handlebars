<h3 class="pb-3">Blog Posts:</h3>
<div class="blog-posts">
{{#each blogs as |blog|}}
<a href="/blogpost/{{blog.id}}" class="text-decoration-none"> 
<div class="card mb-5" id="{{blog.id}}">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
    <h5> {{blog.blog_title}}</h5>
    <p class=""> Posted by {{blog.username}} on {{format_date blog.date}}</p>
    </div>
    <div class="card-body text-dark">
        {{blog.content}}
    </div>
    <p class=" ms-2 "> see comments </p>
</div>
</a>
{{else}}
 <p> no blog posts yet!</p>
{{/each}}
  </div>  

